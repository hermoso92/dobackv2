// Modelos para el sistema de geocercas
model GeofenceRule {
  id            String   @id
  name          String
  description   String?
  organizationId String
  zoneId        String?
  parkId        String?
  conditions    Json     @default("[]")
  actions       Json     @default("[]")
  isActive      Boolean  @default(true)
  priority      Int      @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  organization  Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  zone          Zone?        @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  park          Park?        @relation(fields: [parkId], references: [id], onDelete: Cascade)
  events        GeofenceEvent[]

  @@map("GeofenceRule")
}

model GeofenceVehicleState {
  id             String   @id
  vehicleId      String
  organizationId String
  currentZones   String[] @default([])
  currentParks   String[] @default([])
  lastUpdate     DateTime @default(now())
  ruleStates     Json     @default("{}")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relaciones
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([vehicleId, organizationId])
  @@map("GeofenceVehicleState")
}

model GeofenceEvent {
  id             String    @id
  vehicleId      String
  organizationId String
  ruleId         String?
  eventType      String    // 'entry', 'exit', 'violation'
  zoneId         String?
  parkId         String?
  latitude       Decimal?  @db.Decimal(10, 8)
  longitude      Decimal?  @db.Decimal(11, 8)
  speed          Decimal?  @db.Decimal(5, 2)
  timestamp      DateTime  @default(now())
  metadata       Json      @default("{}")
  createdAt      DateTime  @default(now())

  // Relaciones
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  rule           GeofenceRule? @relation(fields: [ruleId], references: [id], onDelete: SetNull)
  zone           Zone?        @relation(fields: [zoneId], references: [id], onDelete: SetNull)
  park           Park?        @relation(fields: [parkId], references: [id], onDelete: SetNull)

  @@map("GeofenceEvent")
}

model DailyProcessingReport {
  id                String   @id @default(dbgenerated("gen_random_uuid()"))
  organizationId    String
  processingDate    DateTime
  totalVehicles     Int
  successfulVehicles Int
  failedVehicles    Int
  totalDataPoints   Int
  status            String   // SUCCESS, PARTIAL, FAILED
  details           Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  organization      Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@map("DailyProcessingReport")
}

model FileState {
  id                String   @id @default(dbgenerated("gen_random_uuid()"))
  fileName          String
  filePath          String
  fileHash          String
  fileSize          Int
  vehicleId         String
  organizationId    String
  fileType          String   // CAN, ESTABILIDAD, GPS, ROTATIVO
  processingStatus  String   // PENDING, PROCESSING, COMPLETED, FAILED, SKIPPED
  decodedStatus     String?  // NOT_DECODED, DECODED, DECODING_FAILED (solo para CAN)
  dataPointsCount   Int?
  lastProcessedAt   DateTime?
  processingErrors  String[]
  metadata          Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  organization      Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  vehicle           Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@unique([fileHash, organizationId])
  @@map("FileState")
}
