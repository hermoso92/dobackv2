{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "allowJs": true,
        "noEmit": false,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/.prisma/client"
        ]
    },
    "include": [
        "src/services/kpiCalculator.ts",
        "src/services/eventDetector.ts",
        "src/services/keyCalculator.ts",
        "src/services/speedAnalyzer.ts",
        "src/services/radarService.ts",
        "src/services/radarIntegration.ts",
        "src/services/emergencyDetector.ts",
        "src/services/PDFExportService.ts",
        "src/utils/logger.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}