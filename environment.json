{
  "snapshot": "POPULATED_FROM_SETTINGS",
  "install": "npm install",
  "start": "powershell.exe -File iniciar.ps1",
  "terminals": [
    {
      "name": "Iniciar DobackSoft",
      "command": "powershell.exe -File iniciar.ps1"
    },
    {
      "name": "Backend Solo",
      "command": "node backend-final.js"
    },
    {
      "name": "Frontend Solo", 
      "command": "npm run dev"
    }
  ],
  "rules": [
    {
      "description": "Ejecutar iniciar.ps1 al reiniciar sistema",
      "trigger": "system-restart",
      "action": "powershell.exe -File iniciar.ps1"
    },
    {
      "description": "Usar puertos fijos del proyecto",
      "trigger": "port-conflict",
      "action": "powershell.exe -File iniciar.ps1"
    },
    {
      "description": "No iniciar servicios manualmente",
      "trigger": "manual-start",
      "action": "redirect-to-iniciar-ps1"
    }
  ]
}
