# Configuración de la aplicación
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=DobackSoft
DB_USER=postgres
DB_PASSWORD=your-password-here

# Configuración de correo electrónico
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Configuración de PDF
WKHTMLTOPDF_PATH=/usr/local/bin/wkhtmltopdf  # Linux/Mac
# WKHTMLTOPDF_PATH=C:\Program Files\wkhtmltopdf\bin\wkhtmltopdf.exe  # Windows

# Configuración de IA
TENSORFLOW_MODEL_PATH=models/stability_model.h5
SCIKIT_LEARN_MODEL_PATH=models/telemetry_model.pkl

# Configuración de almacenamiento
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Configuración de seguridad
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
REMEMBER_COOKIE_HTTPONLY=True

# Configuración de logs
LOG_LEVEL=INFO
LOG_FILE=logs/DobackSoft.log

# Configuración de API
API_RATE_LIMIT=100/minute
API_KEY=your-api-key-here

# Configuración de monitoreo
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-new-relic-key-here

# Configuración de sesión
SESSION_TYPE=filesystem
PERMANENT_SESSION_LIFETIME=3600  # 1 hora

# Configuración de JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hora

# Configuración de IA
AI_MODEL_PATH=models/ai_model.h5
AI_THRESHOLD=0.8

# Configuración de telemetría
CAN_INTERFACE=can0
GPS_PORT=/dev/ttyUSB0
GPS_BAUDRATE=9600

# Configuración de alarmas
ALARM_THRESHOLD_STABILITY=0.7
ALARM_THRESHOLD_SPEED=120
ALARM_THRESHOLD_ACCELERATION=0.5

# Configuración de informes
REPORT_TEMPLATE_PATH=templates/reports
REPORT_OUTPUT_PATH=static/reports

# Flask
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key

# Base de datos
DEV_DATABASE_URL=postgresql://user:password@localhost:5432/DobackSoft_dev
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/DobackSoft_test

# Email
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/DobackSoft.log

# API
API_TITLE=DobackSoft API
API_VERSION=1.0.0
API_DESCRIPTION=API para el sistema de monitoreo de estabilidad de vehículos

# Aplicación
APP_NAME=DobackSoft
APP_VERSION=2.0.0
APP_DESCRIPTION=Sistema de monitoreo de estabilidad de vehículos

# Caché
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300 