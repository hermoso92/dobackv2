# Configuración de la aplicación
FLASK_APP=DobackSoft_master.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Configuración de la base de datos
DATABASE_URL=postgresql://postgres:postgres@localhost/DobackSoft_v2

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/DobackSoft.log

# Configuración de seguridad
SESSION_TYPE=filesystem
PERMANENT_SESSION_LIFETIME=1800  # 30 minutos

# Configuración de archivos
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Configuración de telemetría
UPDATE_INTERVAL=5  # segundos
GPS_TIMEOUT=10  # segundos

# Configuración de estabilidad
STABILITY_THRESHOLD=15  # grados 